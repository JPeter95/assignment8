<div class="todo_item">
	<h1>
		<%= "#{@todo_item.task_title}" %>
	</h1>
	<h2>
		<%= "Due on: #{@todo_item.due_date}" %>
	</h2>
	<h3>
		<%= "Status: #{@todo_item.done ? "Done": "Not done"}" %>
	</h3>
	<p>
		<%= "#{@todo_item.description}" %>
	</p>

</div>
<p />

<%= link_to 'Edit Todo Item', edit_todo_list_todo_item_path(@todo_list, @todo_item) %> |
<%= link_to 'Delete Todo Item', [@todo_list, @todo_item], method: :delete, 
      data: { confirm: 'Are you sure?' } %> |
<%= link_to 'Back', @todo_list %>
